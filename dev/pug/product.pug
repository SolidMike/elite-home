                            +c-button({
                                label: 'Заказать',
                                href: '#form-modal',
                                size: 'size_md',
                                skin: 'type_cat modal-btn product__btn'
                            })
                        .product__slider
                            .swiper-container.product-slider
                                .swiper-wrapper
                                    .swiper-slide
                                        .bg-elem.bg-elem_type_product
                                        img(src="./static/images/content/single-product.jpg").product-slider__img
                        .product-slider__controls
                            .swiper-button-prev.product-slider__btn-prev
                                +icon('slider-arrow-left')
                            .swiper-button-next.product-slider__btn-next
                                +icon('slider-arrow-right')
