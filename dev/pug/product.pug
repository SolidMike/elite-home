extends template/secondary

block variables
    - var title = 'Страница товара'
    - var pageClass = 'productPage'

block content
    .section.fp-auto-height
        .section__wrapper
            .section__container
                ul.breadcrumbs
                    +breadcrumbs-item('Главная','/')
                    +breadcrumbs-item('Мягкая мебель','#')
                    +breadcrumbs-item('Конкретный товар')
                .section__content.section__content_transparent
                    .title Конкретный товар (Заголовок)
                    .product
